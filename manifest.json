{
    "manifest_version" : 3,
    "name" : "ADHD reader",
    "version" : "2.0.0",
    "description" : "An extension to help people with adhd read lots of words",
    "content_scripts" : [
        {
            "matches" : ["<all_urls>"],
            "js" : ["script.js"]
        }
    ],
    "action" : {
        "default-icon" : {
            "128" : "icon128.png"
        }
    },
    "permissions" : [
        "storage"
    ],
    "icons" : {
        "128" : "icon128.png"
    },
    "background" : {
        "service_worker" : "service-worker.js"
    }
}
